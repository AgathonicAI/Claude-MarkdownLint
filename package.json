  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "markdownlint-cli2": "^0.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
