{
  "name": "markdownlint",
  "version": "1.0.1",
  "description": "Claude Code plugin for linting and fixing markdown files",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "markdownlint-mcp": "dist/server.js"
  },
