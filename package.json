{
  "name": "claude-markdownlint-plugin",
  "version": "1.0.0",
  "description": "Claude Code plugin for linting and fixing markdown files",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "node --test dist/**/*.test.js",
    "lint": "npx markdownlint-cli2 '**/*.md' '#node_modules'"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "markdownlint-cli2": "^0.13.0"
  }
}
